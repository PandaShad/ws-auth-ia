{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2022",
    "module": "commonJS",
    "lib": [
      "es2020",
      "dom"
    ],
    "useDefineForClassFields": false,
    "outDir": "./dist",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
